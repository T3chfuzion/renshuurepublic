<!-- Featured Products -->
<section class="py-20 lg:py-24 bg-white" id="products">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl lg:text-5xl font-bold font-display text-gray-900 mb-4">{{ section.settings.title | default: "Featured Products" }}</h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">{{ section.settings.subtitle | default: "Premium athletic apparel for champions" }}</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10 mb-16">
            {% assign featured_collection = collections[section.settings.collection] %}
            {% if featured_collection != blank %}
                {% for product in featured_collection.products limit: section.settings.products_to_show %}
                    {% render 'product-card', product: product %}
                {% endfor %}
            {% else %}
                <!-- Placeholder products if no collection is selected -->
                {% for i in (1..3) %}
                    <div class="group bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-gray-100">
                        <div class="relative h-80 bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center overflow-hidden">
                            <div class="absolute inset-0 bg-gradient-to-br from-brand-500/10 to-brand-600/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                            <span class="text-gray-500 font-medium z-10">Product Image</span>
                        </div>
                        <div class="p-8">
                            <div class="flex items-center justify-between mb-2">
                                <span class="inline-block bg-brand-100 text-brand-700 text-xs font-semibold px-3 py-1 rounded-full">NEW</span>
                                <div class="flex text-yellow-400">
                                    ★★★★★
                                </div>
                            </div>
                            <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-brand-600 transition-colors">Sample Product {{ i }}</h3>
                            <p class="text-gray-600 mb-6 leading-relaxed">Premium quality athletic apparel designed for performance and style.</p>
                            <div class="flex items-center justify-between mb-6">
                                <div class="text-3xl font-bold text-gray-900">${{ 59.99 | plus: i | times: 10 }}</div>
                                <div class="text-sm text-brand-600 font-semibold">Free Shipping</div>
                            </div>
                            <button class="w-full bg-brand-600 hover:bg-brand-700 text-white py-4 rounded-2xl font-semibold text-lg transition-all duration-300 transform hover:scale-105 shadow-md hover:shadow-lg">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
        
        <div class="text-center">
            <a href="{{ section.settings.view_all_link | default: '/collections/all' }}" class="inline-flex items-center bg-gray-100 hover:bg-gray-200 text-gray-800 px-8 py-4 rounded-full font-semibold text-lg transition-all duration-300 shadow-md hover:shadow-lg">
                {{ section.settings.view_all_text | default: "View All Products" }}
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
            </a>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "Products to show",
      "default": 3
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View All Button Text",
      "default": "View All Products"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View All Link"
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}