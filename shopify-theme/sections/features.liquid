<!-- Features Section -->
<section class="py-20 lg:py-24 bg-brand-600" id="about">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-4xl lg:text-5xl font-bold font-display text-white mb-4">{{ section.settings.title | default: "Built for the Mats" }}</h2>
            <p class="text-xl text-brand-100 max-w-3xl mx-auto">{{ section.settings.subtitle | default: "Every piece of gear is designed by grapplers, for grapplers. We understand what it takes to perform at your best across all disciplines." }}</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
            {% for block in section.blocks %}
                <div class="group text-center p-8 bg-white/10 backdrop-blur-md rounded-3xl hover:bg-white/15 transition-all duration-300 transform hover:-translate-y-1 border border-white/20">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-white/20 text-white rounded-2xl mb-6 group-hover:scale-110 transition-transform duration-300">
                        {% case block.settings.icon %}
                            {% when 'check' %}
                                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            {% when 'lightning' %}
                                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                </svg>
                            {% when 'clock' %}
                                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                            {% when 'shield' %}
                                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                                </svg>
                            {% else %}
                                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                </svg>
                        {% endcase %}
                    </div>
                    <h3 class="text-2xl font-bold text-white mb-4">{{ block.settings.title }}</h3>
                    <p class="text-brand-100 leading-relaxed">{{ block.settings.description }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Features",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Built for the Mats"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "check",
              "label": "Check"
            },
            {
              "value": "lightning",
              "label": "Lightning"
            },
            {
              "value": "clock",
              "label": "Clock"
            },
            {
              "value": "shield",
              "label": "Shield"
            }
          ],
          "default": "check"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "check",
            "title": "Competition Ready",
            "description": "Our gear meets major competition standards including IBJJF, UAEJJF, and more. Train and compete with confidence knowing your gear is tournament legal."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "lightning",
            "title": "Performance Fabric",
            "description": "Advanced moisture-wicking technology with anti-microbial treatment. Stay dry, comfortable, and fresh during the toughest training sessions."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "clock",
            "title": "Built to Last",
            "description": "Reinforced construction and premium materials ensure your gear withstands years of intense training. Quality you can count on."
          }
        }
      ]
    }
  ]
}
{% endschema %}