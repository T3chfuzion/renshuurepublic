<!-- Navigation -->
<header class="bg-white/95 backdrop-blur-md border-b border-gray-100 sticky top-0 z-50 shadow-sm">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            <div class="flex items-center">
                {% if section.settings.logo != blank %}
                    <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}" class="h-10 w-auto mr-3">
                {% endif %}
                <div class="text-2xl font-bold text-gray-900 tracking-tight">{{ shop.name }}</div>
            </div>
            <div class="hidden md:flex items-center space-x-8">
                {% for link in linklists.main-menu.links %}
                    <a href="{{ link.url }}" class="text-gray-700 hover:text-brand-600 font-medium transition-colors duration-200">{{ link.title }}</a>
                {% endfor %}
                <a href="{{ routes.cart_url }}" class="bg-brand-600 hover:bg-brand-700 text-white px-4 py-2 rounded-full font-medium transition-all duration-200 shadow-md hover:shadow-lg cart-btn">
                    Cart (<span class="cart-count">{{ cart.item_count }}</span>)
                </a>
            </div>
            <!-- Mobile menu button -->
            <div class="md:hidden">
                <button class="text-gray-700 hover:text-brand-600 p-2" id="mobile-menu-button">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>
        
        <!-- Mobile menu -->
        <div class="md:hidden hidden" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t">
                {% for link in linklists.main-menu.links %}
                    <a href="{{ link.url }}" class="text-gray-700 hover:text-brand-600 block px-3 py-2 rounded-md font-medium">{{ link.title }}</a>
                {% endfor %}
                <a href="{{ routes.cart_url }}" class="text-gray-700 hover:text-brand-600 block px-3 py-2 rounded-md font-medium">
                    Cart ({{ cart.item_count }})
                </a>
            </div>
        </div>
    </nav>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}